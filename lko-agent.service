[Unit]
Description=LKO Agent - Autonomous System Monitor
After=network.target

[Service]
Type=simple
User=gary
WorkingDirectory=/home/gary/myagent_cli
Environment="PATH=/home/gary/myagent_cli/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="DISPLAY=:0"
Environment="DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus"
Environment="XAUTHORITY=/home/gary/.Xauthority"
ExecStart=/home/gary/myagent_cli/venv/bin/python3 -u /home/gary/myagent_cli/agent_daemon.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Resource limits
MemoryMax=2G
CPUQuota=20%

[Install]
WantedBy=multi-user.target
